# SwellSense Frontend Environment Variables
# Copy this file to .env.local and fill in your actual values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1

# App Configuration
NEXT_PUBLIC_APP_NAME=SwellSense
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=https://swellsense.app

# External Services
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id_here

# Authentication (if using NextAuth.js in the future)
NEXTAUTH_URL=https://swellsense.app
NEXTAUTH_SECRET=your_nextauth_secret_here

# Email Service (for contact forms)
RESEND_API_KEY=your_resend_api_key_here
CONTACT_EMAIL=hello@swellsense.app

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_DEBUG_MODE=false

# Social Media
NEXT_PUBLIC_TWITTER_HANDLE=@swellsense
NEXT_PUBLIC_INSTAGRAM_HANDLE=@swellsense

# Deployment
NEXT_PUBLIC_VERCEL_URL=${VERCEL_URL}
NEXT_PUBLIC_ENVIRONMENT=development